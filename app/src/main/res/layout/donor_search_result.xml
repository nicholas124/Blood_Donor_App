<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="20dp"
    android:paddingBottom="15dp"
    android:background="@drawable/round_conner"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <RelativeLayout
            android:id="@+id/cons"
            android:padding="30dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ds_image"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginBottom="20dp"
                app:srcCompat="@drawable/image_icom" />

            <TextView
                android:id="@+id/ds_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ds_image"
                android:layout_centerHorizontal="true"
                android:text="TextView"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/ds_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ds_name"
                android:layout_centerHorizontal="true"
                android:text="TextView"
                android:textSize="16sp"
                 />

            <TextView
                android:id="@+id/ds_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:layout_below="@id/ds_email"
                android:layout_centerHorizontal="true"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/ds_phoneNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/ds_gender"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/ds_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/ds_phoneNumber"
                android:textSize="16sp"
                 />

            <TextView
                android:id="@+id/ds_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/ds_address"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/ds_donoroption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/ds_city"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/ds_donorStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/ds_donoroption"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/name"
                android:layout_marginLeft="15dp"
                android:layout_below="@id/ds_image"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ds_name"
                android:layout_marginLeft="15dp"
                android:text="Gender"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:layout_marginLeft="15dp"
                android:layout_below="@id/ds_email"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PhoneNo"
                android:layout_marginLeft="15dp"
                android:layout_below="@id/ds_gender"
                android:textStyle="bold"
 />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address"
                android:layout_marginLeft="15dp"
                android:layout_below="@id/ds_phoneNumber"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Blood Type"
                android:layout_below="@id/ds_city"
                android:layout_marginLeft="15dp"
                android:textStyle="bold"
               />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="City"
                android:layout_below="@id/ds_address"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Blood Status"
                android:layout_marginLeft="15dp"
                android:layout_below="@id/ds_donoroption"
                android:textStyle="bold"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>