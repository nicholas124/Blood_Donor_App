<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".User">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/imageinven"
    />

    <TextView
        android:id="@+id/gender_text"
        android:text="Gender"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/profile_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/gender_type"
        android:text=""
        android:textSize="18sp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/gender_text"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/profile_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/name_text"
        android:text="Name"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/gender_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/name_type"
        android:text=""
        android:textSize="18sp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/name_text"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/gender_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/email_text"
        android:text="Email"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/email_type"
        android:text=""
        android:textSize="18sp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/email_text"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/name_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/phone_text"
        android:text="Phone No"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/email_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/phone_type"
        android:text=""
        android:textSize="18sp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/phone_text"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/email_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/address_text"
        android:text="Address"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/phone_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/address_type"
        android:text=""
        android:textSize="18sp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/address_text"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/phone_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/city_text"
        android:text="City"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/address_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/city_type"
        android:text=""
        android:textSize="18sp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/city_text"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/address_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/bloodType_text"
        android:text="Blood Type"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/city_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/blood_type"
        android:text=""
        android:textSize="18sp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/bloodType_text"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/city_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/status_text"
        android:text="Status"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/bloodType_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/status_type"
        android:text=""
        android:textSize="18sp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/status_text"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/blood_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>



</RelativeLayout>


</ScrollView>